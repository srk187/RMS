<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MaintenanceDetail">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_margin="20sp">

        <Button
            android:id="@+id/maintenancedetail_button_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_paidmaintenance"
            android:textSize="10sp"
            android:layout_margin="20sp"/>

        <Button
            android:id="@+id/maintenancedetail_button_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_collectedmaintenance"
            android:textSize="10sp"
            android:layout_margin="15sp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/maintenancedetail_recyclview_r1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll1" />

</RelativeLayout>